{
  "name": "quran",
  "version": "1.0.0",
  "private": false,
  "repository": "https://github.com/quran/quran.com-frontend",
  "scripts": {
    "analyze:client": "babel-node internal/scripts/analyze --client",
    "analyze:server": "babel-node internal/scripts/analyze --server",
    "build-storybook": "build-storybook",
    "build:dev": "babel-node internal/scripts/build",
    "build": "babel-node internal/scripts/build --optimize",
    "bundlesize": "bundlesize",
    "clean": "cross-env babel-node internal/scripts/clean",
    "dev": "cross-env DEPLOYMENT=development babel-node internal/development",
    "jest": "jest",
    "lint:fix": "npm run lint -- --fix",
    "lint": "./node_modules/eslint/bin/eslint.js ./src",
    "precommit": "lint-staged",
    "preinstall": "node internal/scripts/preinstall",
    "prettier": "prettier --single-quote --write",
    "start": "cross-env NODE_ENV=production node build/server",
    "storybook": "start-storybook -p 6006",
    "test:stylelint": "stylelint './src/**/*.scss' --config ./.stylelintrc",
    "test": "npm run lint; npm run jest",
    "validate": "npm ls"
  },
  "bundlesize": [
    {
      "path": "./build/client/index-*.js",
      "maxSize": "210 kB"
    },
    {
      "path": "./build/client/Chapter-*.js",
      "maxSize": "50 kB"
    },
    {
      "path": "./build/client/index-*.css",
      "maxSize": "20 kB"
    }
  ],
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src",
      "src/shared"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "automock": false,
    "setupFiles": [
      "./setupJest.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/tests/__mocks__/styleMock.js"
    },
    "globals": {
      "__CLIENT__": true
    }
  },
  "pre-commit": [
    "test:stylelint",
    "precommit"
  ],
  "lint-staged": {
    "*.js": [
      "npm run prettier",
      "npm run lint:fix",
      "git add"
    ],
    "*.scss": [
      "npm run prettier",
      "git add"
    ]
  },
  "engines": {
    "node": ">= 8.9.1"
  },
